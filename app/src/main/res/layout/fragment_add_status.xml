<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/_2sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_status"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/imv_more"
            android:layout_toRightOf="@+id/iv_avatar_status"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_name_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="18dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/friend"/>

        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/tv_content_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_11sdp"
        android:fontFamily="serif"
        android:hint="Hi! What's on your mind?"
        android:gravity="top"
        android:textSize="16sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_11sdp"
        android:src="@drawable/avatar"
        android:id="@+id/iv_attachments"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_13sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:fontFamily="@string/cast_rewind"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="Photo"/>
        <ImageButton
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:src="@drawable/add_image"
            android:padding="@dimen/_5sdp"
            android:tooltipText="photo"
            android:layout_marginLeft="@dimen/_8sdp"
            android:scaleType="centerCrop"
            android:background="?selectableItemBackground"
            android:id="@+id/add_photo"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:background="#3949AB"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/btn_post"
        android:layout_margin="@dimen/_18sdp"/>
</LinearLayout>
</layout>