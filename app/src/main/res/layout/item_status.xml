<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_status"
            android:layout_width="@dimen/_40sdp"
            android:src="@drawable/avatar"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/imv_more"
            android:layout_toRightOf="@+id/iv_avatar_status"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_name_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_2sdp"
                android:text="time"
                android:textColor="@color/grey_500"
                android:textSize="12dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/imv_more"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_30sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_content_status"
            android:text="Content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/avatar"
            android:id="@+id/iv_imgcontent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:id="@+id/tv_number_like"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_number_comment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_number_share"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_like"
            android:src="@drawable/btn_like"
            android:scaleType="center"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="?selectableItemBackground"
            />

        <ImageButton
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/comments" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_share"
            android:src="@drawable/share"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="?selectableItemBackground"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>