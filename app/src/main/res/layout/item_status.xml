<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_status"
            android:layout_width="@dimen/_40sdp"
            android:src="@drawable/avatar"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_toRightOf="@+id/iv_avatar_status"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_4sdp"
            android:layout_toLeftOf="@+id/imv_more"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_avatar"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time_status"
                android:textColor="@color/grey_500"
                android:text="time"
                android:textSize="12dp"
                android:paddingTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/imv_more"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_30sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_content_status"
            android:text="Content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/avatar"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>