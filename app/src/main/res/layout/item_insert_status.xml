<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_by_user"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="8dp"
            android:src="@drawable/avatar" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/iv_avatar_by_user"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toLeftOf="@+id/iv_image"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_insert_status"
            android:layout_height="@dimen/_38sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:id="@+id/tv_content_insert"
                android:text="Hi! What are you thinking?" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_centerVertical="true"
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:padding="@dimen/_2sdp"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/image_icon" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/bg_line"
        android:layout_height="1dp" />
</LinearLayout>
</layout>