<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/_4sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_avatar"
        android:src="@drawable/avatar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />

    <LinearLayout
        android:layout_toRightOf="@+id/imv_avatar"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:layout_toLeftOf="@+id/imv_more"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_notification"
            android:text="title"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time_notification"
            android:textColor="@color/grey_500"
            android:text="time"
            android:textSize="12dp"
            android:paddingTop="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imv_more"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_30sdp"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true" />
    <ImageView
        android:layout_below="@+id/imv_avatar"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:src="@drawable/bg_line"
        android:layout_height="wrap_content" />
</RelativeLayout>